		{
			"name": "Auth",
			"item": [
				{
					"name": "Logins",
					"item": [
						{
							"name": "Student Login",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"var jsonData = pm.response.json();",
											"if(jsonData.status === 'success') {",
											"    pm.collectionVariables.set(\"student_token\", jsonData.data.tokens.access_token);",
											"    pm.collectionVariables.set(\"student_refresh_token\", jsonData.data.tokens.refresh_token);",
											"}"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Accept",
										"value": "application/json",
										"type": "text"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"username\": \"cs_student_1@university.edu\",\n    \"password\": \"secret\",\n    \"role\": \"student\",\n    \"device_name\": \"Postman Test\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{base_url}}/auth/login",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"auth",
										"login"
									]
								},
								"description": "Login as a student. Uses demo seeder credentials. Saves token to student_token variable."
							},
							"response": []
						},
