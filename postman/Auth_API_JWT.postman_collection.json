{
	"info": {
		"_postman_id": "auth-api-collection",
		"name": "Campus Management Auth API (JWT)",
		"description": "Collection for testing Student and Teacher authentication using kz370/jwt-auth with Refresh Tokens.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Student",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"student@example.com\",\n    \"password\": \"<BASE64_ENCRYPTED_PASSWORD>\",\n    \"device_name\": \"My Laptop\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/student/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"student",
								"login"
							]
						},
						"description": "Login student. Returns access_token and refresh_token."
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/student/refresh",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"student",
								"refresh"
							]
						},
						"description": "Get a new access token using the refresh token."
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/student/logout",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"student",
								"logout"
							]
						},
						"description": "Revoke the refresh token."
					},
					"response": []
				}
			]
		},
