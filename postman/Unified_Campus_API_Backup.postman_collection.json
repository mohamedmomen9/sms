{
	"info": {
		"_postman_id": "unified-campus-api-collection",
		"name": "Unified Campus Management API",
		"description": "Comprehensive collection covering Auth (Student/Teacher) and Common Course Management.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Logins",
					"item": [
						{
							"name": "Student Login",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"var jsonData = pm.response.json();",
											"if(jsonData.status === 'success') {",
											"    pm.collectionVariables.set(\"student_token\", jsonData.data.tokens.access_token);",
											"    pm.collectionVariables.set(\"student_refresh_token\", jsonData.data.tokens.refresh_token);",
											"}"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Accept",
										"value": "application/json",
										"type": "text"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"username\": \"test_student@example.com\",\n    \"password\": \"\",\n    \"role\": \"student\",\n    \"device_name\": \"My Laptop\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{base_url}}/auth/login",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"auth",
										"login"
									]
								},
								"description": "Generic login endpoint. Saves token to student_token variable."
							},
							"response": []
						},
						{
							"name": "Teacher Login",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"var jsonData = pm.response.json();",
											"if(jsonData.status === 'success') {",
											"    pm.collectionVariables.set(\"teacher_token\", jsonData.data.tokens.access_token);",
											"    pm.collectionVariables.set(\"teacher_refresh_token\", jsonData.data.tokens.refresh_token);",
											"}"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Accept",
										"value": "application/json",
										"type": "text"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"username\": \"test_teacher@example.com\",\n    \"password\": \"\",\n    \"role\": \"teacher\",\n    \"device_name\": \"Office PC\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{base_url}}/auth/login",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"auth",
										"login"
									]
								},
								"description": "Generic login endpoint. Saves token to teacher_token variable."
							},
							"response": []
						}
					]
				},
				{
					"name": "Token Management",
					"item": [
						{
							"name": "Refresh Token",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Accept",
										"value": "application/json",
										"type": "text"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"refresh_token\": \"{{student_refresh_token}}\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{base_url}}/auth/refresh",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"auth",
										"refresh"
									]
								}
							},
							"response": []
						},
						{
							"name": "Logout",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Accept",
										"value": "application/json",
										"type": "text"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"refresh_token\": \"{{student_refresh_token}}\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{base_url}}/auth/logout",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"auth",
										"logout"
									]
								}
							},
							"response": []
						}
					]
				}
			]
		},
		{
			"name": "Academic",
			"item": [
				{
					"name": "Current Period",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/academic/current",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"academic",
								"current"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Courses",
			"item": [
				{
					"name": "Get Current (As Student)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{student_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/courses/current",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"courses",
								"current"
							]
						},
						"description": "Fetches active enrollments using the Student Token."
					},
					"response": []
				},
				{
					"name": "Get Current (As Teacher)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{teacher_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/courses/current",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"courses",
								"current"
							]
						},
						"description": "Fetches active offerings using the Teacher Token."
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "student_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "student_refresh_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "teacher_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "teacher_refresh_token",
			"value": "",
			"type": "string"
		}
	]
}
